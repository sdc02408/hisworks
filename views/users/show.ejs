<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head') %>
    <link href="/css/common.css" rel="stylesheet">
    <link href="/css/mypage.css" rel="stylesheet">

</head>
<body>
<%- include('../partials/mynav') %>

<!-- Content -->

        <div class="mypage-content col-5">
            <h1 class="contentBoxTop "><%= user.username %></h1>
            <div class="card">

                <form class="mypage-card" action="/users" method="post">
                    <fieldset disabled>
                        <div class="form-group row mypage-card1">
                            <label for="name" class="col-sm-3 col-form-label">Name</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="text" id="name" name="name"
                                       value="<%= user.name %>">
                            </div>
                        </div>
                        <div class="form-group row mypage-card2">
                            <label for="email" class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input class="form-control" type="text" id="email" name="email"
                                       value="<%= user.email %>">
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>

            <div class="mypagebtn">
                <a class="btn mybtn" href="/">Back</a>
                <% if(isAuthenticated && currentUser.id == user.id){ %> <!-- 1 -->
                <a class="btn mybtn" href="/users/<%= user.username %>/edit">Edit</a>
                <% } %>
                <form action="/users/<%= user.username %>?_method=delete" method="post" class="d-inline">
                    <a class="btn mybtn" href="javascript:void(0)"
                       onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
                </form>
            </div>
        </div>



</body>
</html>
