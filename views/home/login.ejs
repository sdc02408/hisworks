<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head') %>
    <link href="css/login.css" rel="stylesheet">
</head>
<body>
<%- include('../partials/mynav') %>

<form class="user-form" action="/login" method="post">

    <div class="col-lg-4 mb-4 card">
        <!--Header-->
        <div class="choose-login">
<!--            Log In Sign Up-->
            <a href="/login" id="aa" class="card-select active">로그인</a>
            <a href="/users/new" id="bb" class=" card-select active">회원가입</a>
            <hr class="hr-light">
        </div>

        <div class="form-group row">
            <label for="username" class=" col-form-label">아이디</label>
            <input type="text" id="username" name="username" value="<%= username %>"
                   class="form-control <%= (errors.username) ? 'is-invalid' : '' %>">
            <% if(errors.username){ %>
                <span class="invalid-feedback"><%= errors.username %></span>
            <% } %>
        </div>

        <div class="form-group row">
            <label for="password" class="col-form-label">비밀번호</label>
            <input type="password" id="password" name="password" value=""
                   class="form-control <%= (errors.password) ? 'is-invalid' : '' %>">
            <% if(errors.password){ %>
                <span class="invalid-feedback"><%= errors.password %></span>
            <% } %>
        </div>

        <% if(errors.login){ %>
            <div class="invalid-feedback d-block"><%= errors.login %></div>
        <% } %>
        <div class="row">
            <div class="text-center mt-4  card-button">
                <div class="social-login text-center">
                    <a class="snsbtn G_btn" href="/auth/google">
                        <img src="images/googlebtn.png" id="snsbtn_img">
                    </a>
                    <a class="snsbtn N_btn" href="/auth/naver">
                        <img src="images/naverbtn.PNG" id="snsbtn_img">
                    </a>
                </div>
                <hr class="hr-light mb-3 mt-4">
                <div class="text-center mt-4">
                    <input type="submit" class="btn btn-dark col-4  btnlogin" value="Log In">
                </div>
                <!--                      <div class="forget-pw">비밀번호를 잊어버렸습니까</div>-->
                <div id="div-message"></div>
            </div>
        </div>

    </div>
    </div>
    </div>

</form>

</div>
<script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
<script src="js/login.js"></script>
</body>
</html>
